{
    "name": "symplify/symplify",
    "description": "Main repository for Symplify packages development.",
    "require": {
        "php": "^7.1",

        "cpliakas/git-wrapper": "^1.7",
        "erusev/parsedown-extra": "^0.7",
        "spatie/regex": "^1.1",
        "fzaninotto/faker": "^1.6",
        "nelmio/alice": "^2.2",

        "doctrine/migrations": "^1.5",
        "doctrine/dbal": "^2.5",
        "doctrine/orm": "^2.5",

        "nette/bootstrap": "^2.4",
        "nette/di": "^2.4.6",
        "nette/finder": "^2.4",
        "nette/database": "^2.4",
        "nette/http": "^2.4",
        "nette/security": "^2.4",
        "latte/latte": "^2.4",
        "nette/utils": "^2.4",
        "nette/robot-loader": "^2.4",
        "nette/neon": "^2.4",
        "tracy/tracy": "^2.4",

        "symfony/asset": "^3.2",
        "symfony/config": "^3.2",
        "symfony/console": "^3.2",
        "symfony/dependency-injection": "^3.2",
        "symfony/event-dispatcher": "^3.2",
        "symfony/http-kernel": "^3.2",
        "symfony/property-access": "^3.2",
        "symfony/routing": "^3.2",
        "symfony/security": "^3.2",
        "symfony/security-core": "^3.2",
        "symfony/security-http": "^3.2",
        "symfony/templating": "^3.2",
        "symfony/twig-bundle": "^3.2",
        "symfony/yaml": "^3.2",
        "symfony/validator": "^3.2",
        "symfony/serializer": "^3.2",

        "symfony-cmf/routing-bundle": "^2.0",

        "squizlabs/php_codesniffer": "3.0.x-dev as 2.8",
        "friendsofphp/php-cs-fixer": "^2.1",

        "laravel/framework": "^5.4",
        "illuminate/container": "^5.4",
        "illuminate/support": "^5.4",
        "contributte/console": "^0.1",
        "odbav-to/presenter-route": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",

        "doctrine/doctrine-bundle": "^1.6",

        "nette/application": "^2.4",

        "symfony/form": "^3.2",
        "symfony/framework-bundle": "^3.2",
        "twig/twig": "^2.2",
        "doctrine/annotations": "^1.3",
        "kdyby/events": "^3.0",
        "kdyby/doctrine": "^3.1",
        "kdyby/console": "^2.6",
        "phpstan/phpstan": "^0.6",
        "phpstan/phpstan-nette": "^0.6",
        "phpstan/phpstan-doctrine": "^0.6",
        "slevomat/coding-standard": "dev-2.0-dev#06c9cbb"
    },
    "autoload": {
        "psr-4": {
            "PHP_CodeSniffer\\": "vendor/squizlabs/php_codesniffer/src",
            "Symplify\\AutoServiceRegistration\\": "packages/AutoServiceRegistration/src",
            "Symplify\\CodingStandard\\": "packages/CodingStandard/src",
            "Symplify\\ControllerAutowire\\": "packages/ControllerAutowire/src",
            "Symplify\\DefaultAutowire\\": "packages/DefaultAutowire/src",
            "Symplify\\ModularRouting\\": "packages/ModularRouting/src",
            "Symplify\\ServiceDefinitionDecorator\\": "packages/ServiceDefinitionDecorator/src",
            "Symplify\\Statie\\": "packages/Statie/src",
            "Symplify\\SymbioticController\\": "packages/SymbioticController/src",
            "Symplify\\SymfonyEventDispatcher\\": "packages/SymfonyEventDispatcher/src",
            "Symplify\\SymfonySecurityVoters\\": "packages/SymfonySecurityVoters/src",
            "Symplify\\PackageBuilder\\": "packages/PackageBuilder/src",
            "Symplify\\EasyCodingStandard\\": "packages/EasyCodingStandard/src",
            "Symplify\\EasyCodingStandard\\SniffRunner\\": "packages/EasyCodingStandard/packages/SniffRunner/src",
            "Symplify\\EasyCodingStandard\\ChangedFilesDetector\\": "packages/EasyCodingStandard/packages/ChangedFilesDetector/src",
            "Symplify\\EasyCodingStandard\\FixerRunner\\": "packages/EasyCodingStandard/packages/FixerRunner/src",
            "Symplify\\ModularLatteFilters\\": "packages/ModularLatteFilters/src",
            "Symplify\\DoctrineMigrations\\": "packages/DoctrineMigrations/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\AutoServiceRegistration\\Tests\\": "packages/AutoServiceRegistration/tests",
            "Symplify\\CodingStandard\\Tests\\": "packages/CodingStandard/tests",
            "Symplify\\ControllerAutowire\\Tests\\": "packages/ControllerAutowire/tests",
            "Symplify\\DefaultAutowire\\Tests\\": "packages/DefaultAutowire/tests",
            "Symplify\\ModularRouting\\Tests\\": "packages/ModularRouting/tests",
            "Symplify\\ServiceDefinitionDecorator\\Tests\\": "packages/ServiceDefinitionDecorator/tests",
            "Symplify\\Statie\\Tests\\": "packages/Statie/tests",
            "Symplify\\SymbioticController\\Tests\\": "packages/SymbioticController/tests",
            "Symplify\\SymfonyEventDispatcher\\Tests\\": "packages/SymfonyEventDispatcher/tests",
            "Symplify\\SymfonySecurityVoters\\Tests\\": "packages/SymfonySecurityVoters/tests",
            "Symplify\\PackageBuilder\\Tests\\": "packages/PackageBuilder/tests",
            "Symplify\\Tests\\": "tests",
            "Symplify\\EasyCodingStandard\\Tests\\": "packages/EasyCodingStandard/tests",
            "Symplify\\EasyCodingStandard\\SniffRunner\\Tests\\": "packages/EasyCodingStandard/packages/SniffRunner/tests",
            "Symplify\\EasyCodingStandard\\ChangedFilesDetector\\Tests\\": "packages/EasyCodingStandard/packages/ChangedFilesDetector/tests",
            "Symplify\\EasyCodingStandard\\FixerRunner\\Tests\\": "packages/EasyCodingStandard/packages/FixerRunner/tests",
            "Symplify\\ModularLatteFilters\\Tests\\": "packages/ModularLatteFilters/tests",
            "Symplify\\DoctrineMigrations\\Tests\\": "packages/DoctrineMigrations/tests"
        },
        "classmap": [
            "packages/Statie/bin/include-autoload.php"
        ]
    },
    "replace": {
        "symplify/modular-latte-filters": "self.version",
        "symplify/package-builder": "self.version",
        "symplify/changed-files-detector": "self.version",
        "symplify/rule-runner": "self.version",
        "symplify/sniff-runner": "self.version"
    },
    "scripts": {
        "complete-check": ["phpunit", "@fix-cs", "@phpstan"],
        "check-cs": "packages/EasyCodingStandard/bin/easy-coding-standard check packages",
        "fix-cs": "packages/EasyCodingStandard/bin/easy-coding-standard check packages --fix",
        "phpstan": "phpstan analyse packages --level=4 -c phpstan.neon"
    }
}
