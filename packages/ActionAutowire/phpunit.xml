<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
>
    <!-- tests directories to run -->
    <testsuites>
        <testsuite>
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <!-- source to check coverage for -->
    <filter>
        <whitelist>
            <directory>src</directory>
        </whitelist>
    </filter>
    <!-- listener to run after every single test -->
    <listeners>
        <listener class="Symplify\ActionAutowire\Tests\PHPUnit\ClearLogAndCacheTestListener" />
    </listeners>

</phpunit>
