{
    "name": "symplify/easy-ci",
    "description": "Toolkit of commands that should not be missed in you CI",
    "license": "MIT",
    "bin": [
        "bin/easy-ci"
    ],
    "require": {
        "php": ">=8.0",
        "composer/semver": "^3.3",
        "nette/neon": "^3.3.3",
        "nette/robot-loader": "^3.4",
        "nette/utils": "^3.2",
        "nikic/php-parser": "^4.14.0",
        "symfony/console": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symplify/astral": "^11.1",
        "symplify/composer-json-manipulator": "^11.1",
        "symplify/package-builder": "^11.1",
        "symplify/smart-file-system": "^11.1",
        "symplify/symplify-kernel": "^11.1"
    },
    "require-dev": {
        "cweagans/composer-patches": "^1.7",
        "latte/latte": "^2.11",
        "nette/application": "^3.1",
        "phpunit/phpunit": "^9.5.21"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\EasyCI\\": [
                "src",
                "packages"
            ]
        },
        "classmap": [
            "stubs"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\EasyCI\\Tests\\": [
                "tests",
                "packages-tests"
            ]
        }
    },
    "extra": {
        "enable-patching": true,
        "branch-alias": {
            "dev-main": "11.1-dev"
        },
        "patches": {
            "symfony/dependency-injection": [
                "https://raw.githubusercontent.com/symplify/vendor-patch-files/main/patches/generic-php-config-loader.patch"
            ]
        }
    },
    "conflict": {
        "symplify/easy-coding-standard": "<11.1.0",
        "symplify/phpstan-rules": "<11.1.0",
        "symplify/easy-testing": "<11.1.0",
        "symplify/rule-doc-generator-contracts": "<11.1.0",
        "symplify/php-config-printer": "<11.1.0",
        "symplify/autowire-array-parameter": "<11.1.0",
        "symplify/phpstan-extensions": "<11.1.0",
        "symplify/rule-doc-generator": "<11.1.0",
        "symplify/vendor-patches": "<11.1.0",
        "symplify/skipper": "<11.1.0",
        "symplify/smart-file-system": "<10.0.0-beta1",
        "symplify/symfony-static-dumper": "<11.1.0",
        "symplify/monorepo-builder": "<11.1.0",
        "symplify/config-transformer": "<11.1.0",
        "symplify/coding-standard": "<11.1.0",
        "symplify/easy-parallel": "<11.1.0"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*"
    },
    "config": {
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
