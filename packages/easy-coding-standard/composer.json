{
    "name": "symplify/easy-coding-standard",
    "description": "Use Coding Standard with 0-knowledge of PHP-CS-Fixer and PHP_CodeSniffer.",
    "license": "MIT",
    "bin": [
        "bin/ecs"
    ],
    "require": {
        "php": ">=8.0",
        "composer/xdebug-handler": "^2.0",
        "danielstjules/stringy": "^3.1",
        "friendsofphp/php-cs-fixer": "^3.0",
        "nette/utils": "^3.2",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/config": "^5.3",
        "symfony/console": "^5.3",
        "symfony/dependency-injection": "^5.3",
        "symfony/finder": "^5.3",
        "symfony/http-kernel": "^5.3",
        "symfony/process": "^5.3",
        "symplify/autowire-array-parameter": "^9.4.2",
        "symplify/coding-standard": "^9.4.2",
        "symplify/console-color-diff": "^9.4.2",
        "symplify/easy-testing": "^9.4.2",
        "symplify/package-builder": "^9.4.2",
        "symplify/skipper": "^9.4.2",
        "symplify/smart-file-system": "^9.4.2",
        "symplify/symplify-kernel": "^9.4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\": [
                "src",
                "packages"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\Tests\\": [
                "tests",
                "packages-tests"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "9.5-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": false
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
