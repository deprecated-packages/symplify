{
    "name": "symplify/easy-coding-standard",
    "description": "Use Coding Standard with 0-knowledge of PHP-CS-Fixer and PHP_CodeSniffer.",
    "license": "MIT",
    "bin": [
        "bin/ecs"
    ],
    "require": {
        "php": ">=8.0",
        "clue/ndjson-react": "^1.2",
        "composer/xdebug-handler": "^2.0",
        "danielstjules/stringy": "^3.1",
        "friendsofphp/php-cs-fixer": "^3.0.2",
        "nette/utils": "^3.2",
        "react/child-process": "^0.6.3",
        "react/event-loop": "^1.2",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/config": "^5.3",
        "symfony/console": "^5.3",
        "symfony/dependency-injection": "^5.3",
        "symfony/finder": "^5.3",
        "symfony/http-kernel": "^5.3",
        "symfony/process": "^5.3",
        "symplify/autowire-array-parameter": "^9.5",
        "symplify/coding-standard": "^9.5",
        "symplify/console-color-diff": "^9.5",
        "symplify/easy-testing": "^9.5",
        "symplify/package-builder": "^9.5",
        "symplify/skipper": "^9.5",
        "symplify/smart-file-system": "^9.5",
        "symplify/symplify-kernel": "^9.5",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\": [
                "src",
                "packages"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\Tests\\": [
                "tests",
                "packages-tests"
            ]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "9.5-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": false
    },
    "conflict": {
        "symplify/astral": "<9.4.31",
        "symplify/composer-json-manipulator": "<9.4.31",
        "symplify/phpstan-rules": "<9.4.31",
        "symplify/psr4-switcher": "<9.4.31",
        "symplify/rule-doc-generator-contracts": "<9.4.31",
        "symplify/symfony-php-config": "<9.4.31",
        "symplify/simple-php-doc-parser": "<9.4.31",
        "symplify/php-config-printer": "<9.4.31",
        "symplify/markdown-diff": "<9.4.31",
        "symplify/amnesia": "<9.4.31",
        "symplify/phpstan-extensions": "<9.4.31",
        "symplify/rule-doc-generator": "<9.4.31",
        "symplify/console-package-builder": "<9.4.31",
        "symplify/vendor-patches": "<9.4.31",
        "symplify/phpunit-upgrader": "<9.4.31",
        "symplify/easy-hydrator": "<9.4.31",
        "symplify/symfony-static-dumper": "<9.4.31",
        "symplify/git-wrapper": "<9.4.31",
        "symplify/monorepo-builder": "<9.4.31",
        "symplify/config-transformer": "<9.4.31",
        "symplify/easy-ci": "<9.4.31"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
