{
    "name": "symplify/config-transformer",
    "description": "Convert Symfony YAML/XML format to PHP/YAML",
    "license": "MIT",
    "bin": [
        "bin/config-transformer"
    ],
    "require": {
        "php": ">=8.0",
        "ext-dom": "*",
        "nette/utils": "^3.2",
        "nikic/php-parser": "^4.14.0",
        "symfony/console": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/expression-language": "^6.0",
        "symfony/yaml": "^6.0",
        "symplify/php-config-printer": "^11.2",
        "symplify/symplify-kernel": "^11.2"
    },
    "require-dev": {
        "cweagans/composer-patches": "^1.7",
        "phpunit/phpunit": "^9.5.21",
        "symfony/framework-bundle": "^6.0.10",
        "symplify/easy-testing": "^11.2"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\ConfigTransformer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\ConfigTransformer\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "platform-check": false,
        "allow-plugins": {
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "11.2-dev"
        },
        "patches": {
            "symfony/dependency-injection": [
                "patches/symfony-dependency-injection-loader-yamlfileloader-php.patch",
                "patches/symfony-dependency-injection-definition-php.patch"
            ]
        },
        "enable-patching": true
    },
    "conflict": {
        "symplify/astral": "<11.1.0",
        "symplify/composer-json-manipulator": "<11.1.0",
        "symplify/easy-coding-standard": "<11.1.0",
        "symplify/phpstan-rules": "<11.1.0",
        "symplify/easy-testing": "<11.1.0",
        "symplify/rule-doc-generator-contracts": "<11.1.0",
        "symplify/autowire-array-parameter": "<11.1.0",
        "symplify/package-builder": "<11.1.0",
        "symplify/phpstan-extensions": "<11.1.0",
        "symplify/rule-doc-generator": "<11.1.0",
        "symplify/vendor-patches": "<11.1.0",
        "symplify/skipper": "<11.1.0",
        "symplify/smart-file-system": "<11.1.0",
        "symplify/symfony-static-dumper": "<11.1.0",
        "symplify/symplify-kernel": "<9.4.70",
        "symplify/monorepo-builder": "<11.1.0",
        "symplify/easy-ci": "<11.1.0",
        "symplify/coding-standard": "<11.1.0",
        "symplify/easy-parallel": "<11.1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
